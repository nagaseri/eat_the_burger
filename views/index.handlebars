<h1>Eat The Burger!</h1>

<img src="../public/assets/img/burger.png" alt="burger">

<h2>Eat the Burger!</h2>
<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.name}}
				<form action="/{{this.id}}"?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit" class="btn btn-default">Add Burger</button>
				</form>
			</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>GARRETT ATE ALL OF THESE</h2>

	<ul>
		{{#each burgers}}
			{{#if this.sleepy}}
				<li>
					{{this.name}}

					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="false">
						<button type="submit" class="btn btn-default">Un Eat?</button>
					</form>
				</li>
			{{/if}}
		{{/each}}
	</ul>

<h2>Add a Burger!</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
 </form>

<p> Enter a burger you want to eat </p>